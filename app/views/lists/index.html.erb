<div class="border-bottom bg-white" style="margin-bottom: 10px;">
  <div class="container" style="padding-top: 10px; padding-bottom: 10px;">
    <h2 style="margin: 0;">Your movie lists</h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8 cards">
      <% @lists.each do |list| %>
        <div class="card border shadow-sm bg-light">
        <%= cl_image_tag list.cover.key %>
          <div class="card-body d-flex align-items-center justify-content-center">
            <%= link_to list.name,
                list,
                class: "link-underline link-underline-opacity-0" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-4">
      <div class="bg-white border p-3">
        <p class="fs-4">Add a new list</p>
        <%= simple_form_for(@list) do |f|%>
        <%= f.input :name %>
        <%= f.input :cover, as: :file %>
        <%= f.submit class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
